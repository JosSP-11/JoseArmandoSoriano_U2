<UserControl x:Class="RecetasCocina.EliminarRecetaUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecetasCocina"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=local:Recetario}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Width="450" Height="150">
        <StackPanel Background="Red">
            <TextBlock Foreground="White" FontSize="25" HorizontalAlignment="Center" Margin="0,10,0,0" >Desea eliminar la receta "<TextBlock  Text="{Binding Receta.Nombre}" ></TextBlock>"           ?</TextBlock>
            <WrapPanel HorizontalAlignment="Center" Margin="0,40,0,0" >
                <Button FontSize="30" Width="100" Command="{Binding EliminarCommand}"> Si</Button>
                <Button FontSize="30" Width="100" Margin="10,0,0,0" Command="{Binding CambiarVistaCommand}" CommandParameter="{x:Static local:Vistas.Lista}">No</Button>
            </WrapPanel>
        </StackPanel>
    </Border>
</UserControl>
